{
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "./out",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "target": "ES2017",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "paths": {
        "*": [
            "node_modules/*",
            "src/*"
        ]
    },
    "include": ["./src/**/*"]
}